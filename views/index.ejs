<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://unpkg.com/@tailwindcss/forms/dist/forms.min.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/a513ca5fbe.js" crossorigin="anonymous"></script>
        <title>BLOG IN NODEJS/MONGODB</title>
    </head>
    <body class="bg-slate-900">
        <%- include('../views/navbar.ejs') %>
<div class="container mx-auto sm:px-6 lg:px-8"> <!-- container -->


  <div class="flex flex-wrap -mx-4 mb-4 justify-center"> <!-- portoflio -->
  



    <% posts.forEach((post) => { %> 
      <div class="max-w-md py-4 px-8 bg-white shadow-lg rounded-lg my-20 m-5">
        <div class="flex justify-center md:justify-end -mt-16">
          <img class="w-20 h-20 object-cover rounded-full border-2 border-indigo-500" src="<%= post.avatar %>">
        </div>
        <div>
          <h2 class="text-gray-800 text-3xl font-semibold"><%= post.title %></h2>
          <p class="mt-2 text-gray-600"><%= post.content %></p>
        </div>
        <div class="flex justify-end mt-4">
          <a href="#" class="text-xl font-medium text-indigo-500"><%= post.username %></a>
        </div>
      </div>
      
    <%}); %>
    
    
    

    

    </div> <!-- fin portfolio -->

    

      















</div> <!-- container -->








    </body>
</html>